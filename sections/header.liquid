{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show search form?",
        "default": true
      }, 
      {
        "type": "color",
        "id": "bg",
        "label": "Background color",
        "default": "#ffffff"
      }
    ]
  }
{% endschema %}