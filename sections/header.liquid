<header class="theme-bg sticky top-0 py-6 z-10 bg-white shadow-lg">
  <div class="w-full max-w-5xl mx-auto px-4 flex justify-between items-center">
    <h1 class="text-lg font-bold text-gray-500">{{ shop.name }}</h1>

    {% if section.settings.show_search %}    
        <form action="/search" class="border hidden md:block">
            <input type="search" name="q">
            <button type="submit" class="bg-gray-600 text-white px-4">Search</button>
        </form>
    {% endif %}

    <ul class="flex gap-2">
      {% for link in linklists.main-menu.links %}
        <li>
          {{ link.title | link_to: link.url }}
        </li>
      {% endfor %}
    </ul>
  </div>
</header>

<style>
    .theme-bg{
        background-color: {{section.settings.bg}}; /*ðŸ‘ˆ Solo se permite este tipo de variables en la etiqueta style tradicional */
    }
</style>


