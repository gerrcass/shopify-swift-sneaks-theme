<section class="bg-white py-8 text-center">
  <h1 class="text-3xl">{{ page.title }}</h1>
  <p class="mt-4">{{ page.content }}</p>
</section>

{% form 'contact' %}
  {{ form.errors | default_errors }}
  <div class="email">
    <label for="email">Email</label>
    <input
      id="email"
      type="email"
      name="customer[email]" />
  </div>
  <div>
    <label for="test">Test</label>
    <input
      id="test"
      type="text"
      name="customer[test]" />
  </div>

  <div class="message">
    <label for="message">Message</label>
    <textarea id="message" name="contact[body]"></textarea>
  </div>

  <div class="submit">
    <input type="submit" value="Create" />
  </div>
{% endform %}