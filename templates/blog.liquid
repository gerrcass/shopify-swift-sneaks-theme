{% paginate collections by 5 %}
  <section class="max-w-3xl mx-auto text-center py-12">
    <h1 class="text-5xl drop-shadow-xl mb-5">{{ blog.title }}</h1>
    {% for article in blog.articles %}
      <div class="mx-auto mt-2 max-w-xs bg-white hover:bg-green-100 px-4 py-5">
        <a href="{{article.url}}">
          <h2 class="font-semibold">{{ article.title }}</h2>
          <p class="text-xs">by {{ article.author }}</p>
          <p class="mt-2 leading-5">{{ article.excerpt }}</p>
        </a>
      </div>
    {% endfor %}

    <div class="mt-4">
      {{ paginate | default_pagination }}
    </div>
  </section>

{% endpaginate %}

